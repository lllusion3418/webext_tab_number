{
    "manifest_version": 2,
    "version": "0.11",
    "name": "Tab Count Icon",
    "description": "Shows number of open tabs. DEV",
    "browser_specific_settings": {
        "gecko": {
            "strict_min_version": "52.0"
        }
    },
    "permissions": [
        "tabs",
        "storage"
    ],
    "browser_action": {
        "default_icon": "icons/ic_tab_black_24px.svg"
    },
    "background": {
        "scripts": ["shared.js", "migrate.js", "background.js"]
    },
    "options_ui": {
        "page": "options.html",
        "browser_style": false
    }
}
